@model IList<LaptopListingSystem.ViewModels.LaptopViewModel>

@{
    ViewBag.Title = "Laptop System";
}

<h1>Laptop System</h1>
<div class="row-fluid">
    @for (int i = 0; i < Model.Count; i++)
    {
        @Html.Partial("_Laptop", Model[i])

        if (i != 0 && (i + 1) % 3 == 0 && i != Model.Count - 1)
        {
            @:</div>
            @:<div class="row-fluid">
        }
    }
</div>
