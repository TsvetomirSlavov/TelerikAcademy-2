@using TicketingSystem.Web.ViewModels.Shared

@model int?
           
@{
    var placeholder = "Select";
    if (this.ViewData.ModelMetadata.AdditionalValues.ContainsKey("placeholder"))
    {
        placeholder = this.ViewData.ModelMetadata.AdditionalValues["placeholder"] as string;
    }
}
           
@(Html.Kendo()
    .DropDownListFor(model => model)
    .BindTo((IEnumerable<DropDownItemViewModel>)this.ViewData[this.ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty) + "Data"])
    .DataValueField("Id")
    .DataTextField("Name")
    .OptionLabel(placeholder)
    .HtmlAttributes(new { style = "width: 75%;", data_value_primitive = "true" }))
